{
    "multipart": [
        {   "apply": { "model": "tyrbuilders:glass_tempered_pane_red_post" }},
        {   "when": { "north": true },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "tyrbuilders:glass_tempered_pane_red_noside", "y": 270 }
        }
    ]
}
